﻿@model List<royalcatbreed.Models.cats_front_page>
@{
    ViewBag.Title = "Breed Info Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <table id="tbl1" class="table table-bordered">
        <thead>
            <tr>
                <th>No</th>
                <th>Cat Name</th>
                <th>Specific Breed Information</th>

            </tr>
        </thead>

        <tbody>
            @foreach (var cat in Model)
            {
                <tr>
                    <td>@cat.id</td>
                    <td>@cat.cat_name</td>
                    <td>
                        <a class="text-warning" href="@Url.Action("CatProblems","Default", new {cat_name=cat.cat_name})">Cat Problems</a> <br />
                        <a class="text-warning" href="@Url.Action("HomeInstructions","Default", new {cat_name=cat.cat_name})">Home Instructions & How-to</a> <br />
                        <a class="text-warning" href="@Url.Action("CatNutrition", new {cat_name=cat.cat_name})">Cat Nutrition</a> <br />
                        <a class="text-warning" href="@Url.Action("CatBehaviorTraining", new {cat_name=cat.cat_name})">Cat Behavior & Training</a> <br />
                        <a class="text-warning" href="@Url.Action("CatGrooming", new {cat_name=cat.cat_name})"> Cat Grooming</a>
                    </td>

                </tr>

            }
        </tbody>

    </table>
    <br />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

    <script>
        $('#tbl1').dataTable();
    </script>

</div>

